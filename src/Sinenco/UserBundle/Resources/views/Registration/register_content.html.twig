    

{% extends "SinencoUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    {{ form_errors(form) }}
    <section id="erreurs">
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="flash-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </section>
    <div class="col-lg-8">
        <div class="well bs-component"> 
            <form class="form-horizontal" action="{{ path('fos_user_registration_register') }}" method="post">
                <fieldset>
                    <legend>{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</legend>
                        
                    {#  
                    <div class="form-group">
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email,{ 'attr': {'placeholder': 'form.email'|trans({}, 'FOSUserBundle')} } ) }}
                    </div>
                        
                        
                    <div class="form-group">
                        <label for="inputUsername" class="col-lg-4 control-label">
                            {{ 'form.username'|trans({}, 'FOSUserBundle') }}
                        </label>
                        <div class="col-lg-8">
                            <input class="form-control" id="inputUsername" 
                                   placeholder="{{ 'form.username'|trans({}, 'FOSUserBundle') }}" type="text" 
                                   name="_fos_user_registration_form_username" required="required">
                        </div>
                    </div>
                        
                    <div class="form-group">
                        {{ form_label(form.plainPassword.first) }}
                        {{ form_widget(form.plainPassword.first,{ 'attr': {'placeholder': 'form.password'|trans({}, 'FOSUserBundle')} } ) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.plainPassword.second) }}
                        {{ form_widget(form.plainPassword.second,{ 'attr': {'placeholder': 'form.password_confirmation'|trans({}, 'FOSUserBundle')} } ) }}
                    </div>
                        
                    {{ form_widget(form._token) }}
                    <input type="hidden" id="fos_user_registration_form__token" 
                    name="fos_user_registration_form[_token]" value="{{csrf_token('registration')}}">
                        
                        
                        
                        
                    #}
                    {% for row in form %}
                        {{ form_row(row) }}
                        {% if row.vars.name in separator %}<hr />{% endif %}
                    {% endfor %}
                    {# form (form) #}
                        
                    <div class="form-group">
                        <div class="col-lg-8 col-lg-offset-4">
                            <button type="submit" class="btn btn-primary btn-lg btn-block">
                                {{ 'submit'|trans() }}
                            </button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="well bs-component"> 
        </div>
    </div>
{% endblock fos_user_content %}