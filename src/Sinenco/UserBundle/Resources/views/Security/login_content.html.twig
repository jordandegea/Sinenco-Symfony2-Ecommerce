    
{% extends "SinencoUserBundle::layout.html.twig" %}
    
{% block fos_user_content %}
    {% if error %}
        <div class="alert alert-warning">{{ error.messageKey|trans([], 'FOSUserBundle') }}</div>
    {% endif %}
        
    <div class="col-lg-8">
        <div class="well bs-component"> 
            <form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <fieldset>
                    
                    <legend>{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</legend>
                    
                    <div class="form-group">
                        <label for="inputEmail" class="col-lg-4 control-label">
                            {{ 'form.email'|trans({}, 'FOSUserBundle') }}
                        </label>
                        <div class="col-lg-8">
                            <input class="form-control" id="inputEmail" placeholder="{{ 'form.email'|trans({}, 'FOSUserBundle') }}" type="text" name="_username">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword" class="col-lg-4 control-label">
                            {{ 'security.login.password'|trans({}, 'FOSUserBundle') }}
                        </label>
                        <div class="col-lg-8">
                            <input class="form-control" id="inputPassword" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}" type="password" name="_password">
                        </div>
                    </div>
                        
                    <div class="form-group">
                        <label for="inputRememberMe" class="col-lg-4 control-label">
                            {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                        </label>
                        <div class="col-lg-8">
                            <input class="form-control" id="inputRememberMe" type="checkbox" name="_remember_me" value="on" >
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-8 col-lg-offset-4">
                            <button type="submit" class="btn btn-primary btn-lg btn-block">
                                {{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}
                            </button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="well bs-component"> 
            <a href="{{ path('fos_user_resetting_request') }}" class="btn btn-primary btn-lg btn-block">
                {{ 'security.login.forgottenPassword'|trans }}
            </a>
        </div>
        <div class="well bs-component"> 
            <a href="{{ path('fos_user_registration_register') }}" class="btn btn-success btn-lg btn-block">
                {{ 'layout.register'|trans({}, 'FOSUserBundle') }}
            </a>
        </div>
            
    </div>
{% endblock fos_user_content %}