{# src/OC/PlatformBundle/Resources/views/Advert/edit.html.twig #}

{% extends "SinencoProjectBundle::layout.html.twig" %}

{% block title %}
    {{ parent() }}
{% endblock %}


{% block stylesheets %}
    {{ parent() }}

    {% stylesheets filter='?yui_css' 
        "@SinencoShowcaseBundle/Resources/public/css/landing.css" %}

    <link rel="stylesheet" href="{{ asset_url }}" type="text/css">
    {% endstylesheets %}

    <style>
        .intro-message-bg{
            background: url({% path page.image, 'lg'  %}) no-repeat center center;
            background-size: cover;
        }
        .banner-bg{
            background: url({% path page.image, 'lg'  %}) no-repeat center center;
            background-size: cover;
        }

    </style>
{% endblock %}

{% block body %}
</div>
</div>
</div>
<!-- Header -->


<a name="about"></a>
<div  class="intro-header intro-message-bg" >
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="intro-message">
                    <h1>{{page.name}}</h1>
                    <h3>A Template by Start Bootstrap</h3>
                    <hr class="intro-divider">
                    <ul class="list-inline intro-social-buttons">
                        {% for tab in page.tabs %}

                            <li>
                                <a href="#{{ tab.canonicalName }}" class="btn btn-default btn-lg">
                                    {#<i class="fa fa-twitter fa-fw"></i>#}
                                    <span class="network-name">{{ tab.name }}</span>
                                </a>
                            </li>
                        {% endfor %}

                    </ul>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container -->

</div>
<!-- /.intro-header -->

<!-- Page Content -->


{% for tab in page.tabs %}
    <section id="{{tab.canonicalName}}" >
        {% for section in tab.sections %}
            <div class="content-section-a">
                <div class="container">
                    {% if section.image is null %}
                        <div class="col-lg-12 text-center">
                            <hr class="section-heading-spacer">
                            <div class="clearfix"></div>
                            <h2 class="section-heading">{{ section.title|raw }}</h2>
                            <p class="lead">{{ section.content|raw }}</p>
                        </div>
                    {% else %}
                        <div class="row">
                            <div class="col-lg-5 col-sm-6">
                                <hr class="section-heading-spacer">
                                <div class="clearfix"></div>
                                <h2 class="section-heading">{{ section.title|raw }}</h2>
                                <p class="lead">{{ section.content|raw }}</p>
                            </div>
                            <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                                <img class="img-responsive" src="img/ipad.png" alt="">
                            </div>
                        </div>

                    {% endif %}

                </div>
                <!-- /.container -->

            </div>
        {% endfor %}
    </section>
{% endfor %}


<div class="banner banner-bg" >

    <div class="container">

        <div class="row">
            <div class="col-lg-6">
                <h2>Connect to Start Bootstrap:</h2>
            </div>
            <div class="col-lg-6">
                <ul class="list-inline banner-social-buttons">
                    <li>
                        <a href="https://twitter.com/SBootstrap" class="btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Twitter</span></a>
                    </li>
                    <li>
                        <a href="https://github.com/IronSummitMedia/startbootstrap" class="btn btn-default btn-lg"><i class="fa fa-github fa-fw"></i> <span class="network-name">Github</span></a>
                    </li>
                    <li>
                        <a href="#" class="btn btn-default btn-lg"><i class="fa fa-linkedin fa-fw"></i> <span class="network-name">Linkedin</span></a>
                    </li>
                </ul>
            </div>
        </div>

    </div>
    <!-- /.container -->

</div>
<!-- /.banner -->



{% endblock %}