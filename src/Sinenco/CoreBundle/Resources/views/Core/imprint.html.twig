{# src/OC/PlatformBundle/Resources/views/Advert/edit.html.twig #}

{% extends "SinencoCoreBundle::layout.html.twig" %}

{% block title %}
    {{ 'sinenco.core.footer.imprint'|trans }} - {{ parent() }}
{% endblock %}


{% block body %}


    <h2>{{ 'sinenco.core.imprint'|trans }}</h2>
    <div class="col-lg-6">
        <h3>{{ 'sinenco.core.manager'|trans }}</h3>
        <p>
        <pre>
{{ 'sinenco.core.manager_text'|trans({
        '%address%': imprint.address, 
        '%siret%': imprint.siret, 
        '%phone%' : imprint.phone,
        '%skype%' : imprint.skype  }) }}
        </pre>
        <p>
    </div>
    <div class="col-lg-6">
        <h3>{{ 'sinenco.core.hosting'|trans }}</h3>
        <p>
        <pre>
{{ 'sinenco.core.hosting_text'|trans({
        '%name%':imprint.hosting.name,
        '%address%' : imprint.hosting.address
        }) }}
        </pre>
    </p>
</div>
{% endblock %}